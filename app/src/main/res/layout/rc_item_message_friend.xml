<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_friend_message"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="2dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_view_friend"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/default_avatar" />


    <TextView
        android:id="@+id/textContentFriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="4dp"
        android:layout_toEndOf="@id/image_view_friend"
        android:autoLink="web"
        android:background="@drawable/rounded_corner2"
        android:padding="10dp"
        android:text="text message"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000" />

    <ImageView
        android:id="@+id/imageContentFriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/image_view_friend"
        android:background="@drawable/rounded_corner2"
        android:padding="10dp" />

    <TextView
        android:id="@+id/timeContentFriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="-6dp"
        android:layout_marginBottom="9dp"
        android:layout_toStartOf="@+id/textContentFriend"
        android:text="time"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000" />


</RelativeLayout>